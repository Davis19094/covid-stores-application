extends layout
block content
    header.card-header
        script(src='validation.js')
        h4.card-title Register sales agent
    form(method="POST" action='/register' name = 'mydata' onsubmit = 'return validate();')
        div.form-row
            div.col.form-group
                label First name: 
                input.form-control(name="firstname")
            div.col.form-group
                label Last name:
                input.form-control(name="lastname")
            div.col.form-group
                label User name:
                input.form-control(name="username")
        div.form-row
            div.col.form-group
                label  Email:
                input.form-control(name="email")
            div.col.form-group
                label Phone Number:
                input.form-control(name="phone_number")
            div.col.form-group
                label ID Number:
                input.form-control(name="id_no")
        div.form-row
            div.col.form-group
                label.form-check.form-check-inline
                    input.form-check-input(type="radio" name="gender" value="female")
                    span.form-check-label Female 
                label.form-check.form-check-inline
                    input.form-check-input(type="radio" name="gender" value="male")
                    span.form-check-label Male 
        div.form-row
            div.col.form-group
                label Employee ID number:
                input.form-control(name="employee_no")
            div.col.form-group
                label Country 
                input.form-control(name="country")
            div.col.form-group
                label City
                select.form-control(name="city")
                    option(value="Mbarara") Mbarara
                    option(value="Kampala") Kampala
                    option(value="Ruk") Ruk
        div.form-row
            div.col.form-group
                label Create Password
                input.form-control(type="password" name="password")
        div.form-row
            div.col.form-group
                button.btn.btn-primary.btn-block(type="submit" name="submit") Register 
                